{
    "name": "Sign language converter",
    "description": "Translates the selected text to sign language.",
    "version": "0.1.2",
    "icons": {
        "128": "sign_language.png"
    },

    "manifest_version": 2,
    "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net/npm/p5@1.3.1/lib/p5.min.js; object-src 'self'",
    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "permissions": [
        "clipboardRead",
        "clipboardWrite"
    ],

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],

    "browser_action": {
        "default_icon": "sign_language.png",
        "default_title": "Sign language converter"
    }
}
